# Blitz Panel Configuration for Hysteria2 Corporate VPN
# This configuration enables Hysteria2 protocol with corporate network routing

# Server Configuration
SERVER_DOMAIN=${DOMAIN:-your-domain.com}
SERVER_PORT=443
HYSTERIA2_PASSWORD=${HYSTERIA2_PASSWORD:-$(openssl rand -hex 16)}

# Network Configuration
CORPORATE_NETWORKS="192.168.0.0/16,10.0.0.0/8"
WIREGUARD_ENDPOINT=${WIREGUARD_ENDPOINT:-office.example.com:51820}
WIREGUARD_PUBLIC_KEY=${WIREGUARD_PUBLIC_KEY:-your-wireguard-public-key}

# Security Configuration
ENABLE_ACL=true
BLOCK_PRIVATE_IPS=true
ALLOW_CORPORATE_ONLY=false

# Performance Configuration
MAX_CONNECTIONS=1000
BANDWIDTH_UP=100mbps
BANDWIDTH_DOWN=100mbps
UDP_IDLE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
ACCESS_LOG=/var/log/blitz/access.log
ERROR_LOG=/var/log/blitz/error.log

# Authentication Configuration
AUTH_TYPE=password
AUTH_PASSWORD=$HYSTERIA2_PASSWORD

# Masquerade Configuration (Anti-censorship)
MASQUERADE_TYPE=proxy
MASQUERADE_URL=https://dl.google.com
MASQUERADE_REWRITE_HOST=true

# Certificate Configuration
CERT_FILE=/etc/blitz/ssl/server.crt
KEY_FILE=/etc/blitz/ssl/server.key

# User Management Configuration
AUTO_CREATE_USERS=true
DEFAULT_EXPIRY_DAYS=0
DEFAULT_DATA_LIMIT=0
ENABLE_TRAFFIC_STATS=true

# Corporate Integration Configuration
WEBHOOK_SECRET=${WEBHOOK_SECRET:-your-webhook-secret}
WEBHOOK_ENDPOINT=http://automation-service:8080/webhooks/hr-events
ENABLE_2FA=true
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}